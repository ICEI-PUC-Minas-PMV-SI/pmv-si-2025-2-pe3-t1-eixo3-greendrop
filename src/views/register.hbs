<body class="flex items-center justify-center min-h-screen p-4 sm:p-6 lg:p-8">

    <div class="relative flex flex-col md:flex-row w-full max-w-4xl bg-white shadow-2xl rounded-2xl overflow-hidden">
        
        <!-- Left Side: Branding and Illustration -->
        <div class="w-full md:w-1/2 p-8 sm:p-12 flex flex-col justify-center items-center md:items-start text-center md:text-left bg-brand-off-white">
            <!-- Logo SVG -->
            <div class="flex flex-col items-center justify-center text-center mb-6 pb-8">
                <img src="ico.png" alt="logo da GreenDrop" class="w-16 h-auto mb-2 md:w-20">
                <span class="text-3xl font-bold brand-dark-green md:text-4xl">GreenDrop</span>
            </div>
            
            <h1 class="text-3xl sm:text-4xl font-bold brand-dark-green mb-4">
                Crie sua conta
            </h1>
            <p class="text-base text-gray-600">
                Junte-se a nós para construir um futuro mais verde e sustentável.
            </p>
        </div>

        <!-- Right Side: Registration Form -->
        <div class="w-full md:w-1/2 p-8 sm:p-12 flex flex-col justify-center">
            <h2 class="text-2xl sm:text-3xl font-bold text-gray-800 mb-6 text-center">Informações de Cadastro</h2>

            {{#if error}}
            <div class="mb-4 p-3 bg-red-100 border border-red-400 text-red-700 rounded-lg">
                {{error}}
            </div>
            {{/if}}

            <form action="/register" method="POST">
                <div class="mb-4">
                    <label for="name" class="block text-sm font-medium text-gray-700 mb-2">Nome Completo</label>
                    <input type="text" id="name" name="name"
                           class="w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 ring-brand-green border-brand-green transition duration-200"
                           placeholder="Seu nome" required>
                </div>
                <div class="mb-4">
                    <label for="email" class="block text-sm font-medium text-gray-700 mb-2">Email</label>
                    <input type="email" id="email" name="email"
                           class="w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 ring-brand-green border-brand-green transition duration-200"
                           placeholder="seuemail@exemplo.com" required>
                </div>
                <div class="mb-4">
                    <label for="password" class="block text-sm font-medium text-gray-700 mb-2">Senha</label>
                    <div class="relative">
                        <input type="password" id="password" name="password"
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 ring-brand-green border-brand-green transition duration-200"
                               placeholder="Crie uma senha forte" required>
                        <span class="absolute inset-y-0 right-0 pr-3 flex items-center cursor-pointer" onclick="togglePasswordVisibility('password')">
                            <i data-feather="eye" class="text-gray-400"></i>
                        </span>
                    </div>
                </div>
                <div class="mb-6">
                    <label for="confirm-password" class="block text-sm font-medium text-gray-700 mb-2">Confirmar Senha</label>
                    <div class="relative">
                        <input type="password" id="confirm-password" name="confirm-password"
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 ring-brand-green border-brand-green transition duration-200"
                               placeholder="Repita a senha" required>
                        <span class="absolute inset-y-0 right-0 pr-3 flex items-center cursor-pointer" onclick="togglePasswordVisibility('confirm-password')">
                            <i data-feather="eye" class="text-gray-400"></i>
                        </span>
                    </div>
                </div>

                <div>
                    <button type="submit"
                            class="w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-sm text-base font-medium text-white bg-brand-green hover:bg-brand-green-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-transform transform hover:scale-105 duration-300">
                        Criar Conta
                    </button>
                </div>
            </form>

            <p class="mt-8 text-center text-sm text-gray-600">
                Já tem uma conta?
                <a href="/login" class="font-medium brand-green hover:underline">
                    Faça login
                </a>
            </p>
        </div>
    </div>

    <script>
        feather.replace();

        function togglePasswordVisibility(inputId) {
            const passwordInput = document.getElementById(inputId);
            const iconContainer = passwordInput.nextElementSibling;
            
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                iconContainer.innerHTML = '<i data-feather="eye-off" class="text-gray-400"></i>';
            } else {
                passwordInput.type = 'password';
                iconContainer.innerHTML = '<i data-feather="eye" class="text-gray-400"></i>';
            }
            feather.replace();
        }
    </script>
</body>