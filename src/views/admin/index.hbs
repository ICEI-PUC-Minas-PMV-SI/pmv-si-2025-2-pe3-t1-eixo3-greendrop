  <!-- M√©tricas -->
  <section class="container mx-auto px-6 py-2 mt-24">
    <div class="grid grid-cols-1 sm:grid-cols-3 gap-6">
      <div class="bg-white rounded-xl shadow p-5 text-center">
        <h3 class="text-gray-500 text-sm mb-2">Descartes Validados</h3>
        <p class="text-3xl font-bold text-green-700 metrica-validados">0</p>
      </div>
      <div class="bg-white rounded-xl shadow p-5 text-center">
        <h3 class="text-gray-500 text-sm mb-2">Pendentes de Valida√ß√£o</h3>
        <p class="text-3xl font-bold text-yellow-500 metrica-pendentes">0</p>
      </div>
      <div class="bg-white rounded-xl shadow p-5 text-center">
        <h3 class="text-gray-500 text-sm mb-2">Pontos Atribu√≠dos</h3>
        <p class="text-3xl font-bold text-green-600 metrica-pontos">0</p>
      </div>
    </div>
  </section>

  <!-- Formul√°rio de Lan√ßamento de Descarte -->
  <section class="container mx-auto px-6 py-6">
    <div class="bg-white shadow rounded-xl overflow-hidden">
      <div class="p-5 border-b bg-green-50">
        <h2 class="text-lg font-semibold text-gray-800">Registrar Descarte de
          Usu√°rio</h2>
        <p class="text-sm text-gray-600">Atribua pontos para um usu√°rio pelo
          descarte de materiais</p>
      </div>

      <form id="form-registrar-descarte" class="p-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <!-- Busca de Usu√°rio -->
          <div class="relative">
            <label
              class="block text-sm font-medium text-gray-700 mb-2"
            >Usu√°rio</label>
            <input
              type="text"
              id="usuario-busca"
              placeholder="Digite nome ou email do usu√°rio..."
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent"
              autocomplete="off"
            />
            <div
              id="usuarios-lista"
              class="hidden absolute z-10 w-full mt-1 bg-white border border-gray-200 rounded-lg shadow-lg max-h-60 overflow-y-auto"
            >
              <!-- Lista de usu√°rios ser√° preenchida via JS -->
            </div>

            <!-- Usu√°rio Selecionado -->
            <div
              id="usuario-selecionado"
              class="hidden mt-3 p-3 bg-green-50 border border-green-200 rounded-lg"
            >
              <div class="flex justify-between items-start">
                <div>
                  <p
                    class="font-semibold text-gray-800"
                    id="usuario-nome-display"
                  ></p>
                  <p
                    class="text-sm text-gray-600"
                    id="usuario-email-display"
                  ></p>
                  <p
                    class="text-xs text-green-600 font-medium mt-1"
                    id="usuario-pontos-display"
                  ></p>
                </div>
                <button
                  type="button"
                  id="btn-limpar-usuario"
                  class="text-red-600 hover:text-red-700"
                >
                  <i data-feather="x" class="h-5 w-5"></i>
                </button>
              </div>
            </div>
          </div>

          <!-- Material -->
          <div>
            <label
              class="block text-sm font-medium text-gray-700 mb-2"
            >Material</label>
            <select
              id="material-select"
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent"
            >
              <option value="">Selecione o material...</option>
            </select>
          </div>

          <!-- Quantidade -->
          <div>
            <label
              class="block text-sm font-medium text-gray-700 mb-2"
            >Quantidade</label>
            <input
              type="number"
              id="quantidade-input"
              step="0.1"
              min="0.1"
              placeholder="Ex: 5.5"
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent"
            />
          </div>

          <!-- Unidade -->
          <div>
            <label
              class="block text-sm font-medium text-gray-700 mb-2"
            >Unidade</label>
            <select
              id="unidade-select"
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent"
            >
              <option value="kg">Quilogramas (kg)</option>
              <option value="unid">Unidades (unid)</option>
              <option value="L">Litros (L)</option>
            </select>
          </div>
        </div>

        <!-- Previs√£o de Pontos -->
        <div
          id="pontos-previsao"
          class="hidden mt-6 p-4 bg-blue-50 border border-blue-200 rounded-lg"
        >
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm text-gray-600">Pontos a serem atribu√≠dos:</p>
              <p
                class="text-2xl font-bold text-green-600"
                id="pontos-calculados"
              >0</p>
            </div>
            <div class="text-right">
              <p class="text-sm text-gray-600">Novo total do usu√°rio:</p>
              <p
                class="text-xl font-semibold text-gray-800"
                id="pontos-novos"
              >0</p>
            </div>
          </div>
        </div>

        <!-- Bot√£o Registrar -->
        <div class="mt-6 flex justify-end">
          <button
            type="submit"
            id="btn-registrar-descarte"
            class="bg-green-600 hover:bg-green-700 text-white px-8 py-3 rounded-lg font-semibold transition shadow-md hover:shadow-lg"
          >
            Registrar Descarte
          </button>
        </div>
      </form>
    </div>
  </section>

  <!-- Tabela -->
  <section class="container mx-auto px-6 pb-12">
    <div class="bg-white shadow rounded-xl overflow-hidden">
      <div class="p-5 border-b bg-gray-100">
        <h2 class="text-lg font-semibold text-gray-800">Hist√≥rico de Descartes</h2>
        <p class="text-sm text-gray-500">Todos os descartes registrados neste
          ponto de coleta</p>
      </div>

      <div class="overflow-x-auto">
        {{#if historico.length}}
          <table class="min-w-full text-left text-sm">
            <thead class="bg-gray-50 text-gray-600 uppercase text-xs">
              <tr>
                <th class="px-6 py-3">Usu√°rio</th>
                <th class="px-6 py-3">Material</th>
                <th class="px-6 py-3">Quantidade</th>
                <th class="px-6 py-3">Pontos</th>
                <th class="px-6 py-3">Data</th>
                <th class="px-6 py-3">Status</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-100">
              {{#each historico}}
                <tr class="hover:bg-gray-50 transition">
                  <td class="px-6 py-4">
                    <div
                      class="font-medium text-gray-800"
                    >{{this.usuario}}</div>
                  </td>
                  <td class="px-6 py-4">
                    <div
                      class="font-medium text-gray-700"
                    >{{this.material}}</div>
                  </td>
                  <td class="px-6 py-4">{{this.quantidade}}
                    {{this.unidade}}</td>
                  <td class="px-6 py-4">
                    <span class="font-semibold text-green-600">+{{this.pontos}}
                      pts</span>
                  </td>
                  <td class="px-6 py-4">
                    <div class="text-gray-700">{{this.data}}</div>
                    <div class="text-xs text-gray-500">{{this.hora}}</div>
                  </td>
                  <td class="px-6 py-4">
                    <span
                      class="font-medium {{this.statusClass}}"
                    >{{this.statusTexto}}</span>
                  </td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        {{else}}
          <div class="text-center py-12">
            <div class="text-6xl mb-4">üìã</div>
            <p class="text-gray-500 mb-2">Nenhum descarte registrado ainda</p>
            <p class="text-sm text-gray-400">Use o formul√°rio acima para
              registrar o primeiro descarte</p>
          </div>
        {{/if}}
      </div>
    </div>
  </section>

  <!-- ‚úÖ Modal de valida√ß√£o -->
  <div
    id="modal-validacao"
    class="fixed inset-0 hidden bg-black/50 flex items-center justify-center z-[3000]"
  >
    <div
      class="bg-white rounded-2xl shadow-lg p-8 text-center w-80 animate-fade-in"
    >
      <div class="flex justify-center mb-4">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-12 w-12 text-green-600"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M5 13l4 4L19 7"
          />
        </svg>
      </div>
      <h3 class="text-xl font-semibold text-gray-800 mb-2">Valida√ß√£o conclu√≠da!</h3>
      <p class="text-gray-600 text-sm mb-5">O descarte foi validado com sucesso
        e os pontos foram atribu√≠dos üéâ</p>
      <button
        id="fechar-modal-validacao"
        class="bg-green-600 hover:bg-green-700 text-white px-6 py-2 rounded-lg transition"
      >
        Fechar
      </button>
    </div>
  </div>

  <!-- ‚ùå Modal de nega√ß√£o -->
  <div
    id="modal-negacao"
    class="fixed inset-0 hidden bg-black/50 flex items-center justify-center z-[3000]"
  >
    <div
      class="bg-white rounded-2xl shadow-lg p-8 text-center w-80 animate-fade-in"
    >
      <div class="flex justify-center mb-4">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-12 w-12 text-red-600"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M6 18L18 6M6 6l12 12"
          />
        </svg>
      </div>
      <h3 class="text-xl font-semibold text-gray-800 mb-2">Descarte negado</h3>
      <p class="text-gray-600 text-sm mb-5">O descarte foi recusado e n√£o gerou
        pontua√ß√£o.</p>
      <button
        id="fechar-modal-negacao"
        class="bg-red-600 hover:bg-red-700 text-white px-6 py-2 rounded-lg transition"
      >
        Fechar
      </button>
    </div>
  </div>

  <!-- ‚úÖ Modal de Sucesso (Novo Descarte) -->
  <div
    id="modal-descarte-sucesso"
    class="fixed inset-0 hidden bg-black/50 flex items-center justify-center z-[3000]"
  >
    <div
      class="bg-white rounded-2xl shadow-lg p-8 text-center w-96 animate-fade-in"
    >
      <div class="flex justify-center mb-4">
        <div
          class="h-16 w-16 bg-green-100 rounded-full flex items-center justify-center"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-10 w-10 text-green-600"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M5 13l4 4L19 7"
            />
          </svg>
        </div>
      </div>
      <h3 class="text-xl font-semibold text-gray-800 mb-2">Descarte Registrado!</h3>
      <p class="text-gray-600 text-sm mb-4">
        <span class="font-semibold" id="modal-sucesso-pontos">0</span>
        pontos foram atribu√≠dos para
        <span class="font-semibold" id="modal-sucesso-usuario"></span>
      </p>
      <p class="text-xs text-gray-500 mb-5">üéâ O usu√°rio pode visualizar este
        descarte em seu perfil</p>
      <button
        id="btn-fechar-modal-sucesso"
        class="bg-green-600 hover:bg-green-700 text-white px-6 py-2 rounded-lg transition"
      >
        Fechar
      </button>
    </div>
  </div>

