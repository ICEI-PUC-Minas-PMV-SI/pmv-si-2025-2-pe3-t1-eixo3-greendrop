<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <link rel="icon" type="image/png" href="/ico.png" />
  <title>GreenDrop - Mapa</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />

  <!-- Leaflet (2D) -->
  <link href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" rel="stylesheet">
  <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
  <!-- Cluster para Leaflet -->
  <link href="https://unpkg.com/leaflet.markercluster@1.5.3/dist/MarkerCluster.css" rel="stylesheet">
  <link href="https://unpkg.com/leaflet.markercluster@1.5.3/dist/MarkerCluster.Default.css" rel="stylesheet">
  <script src="https://unpkg.com/leaflet.markercluster@1.5.3/dist/leaflet.markercluster.js"></script>

  <!-- MapLibre (3D/perspectiva) -->
  <link href="https://unpkg.com/maplibre-gl@3.6.1/dist/maplibre-gl.css" rel="stylesheet">
  <script src="https://unpkg.com/maplibre-gl@3.6.1/dist/maplibre-gl.js"></script>

  <link rel="stylesheet" href="/css/map.css">
</head>
<body class="relative overflow-hidden">
  <!-- Header melhorado com mais opções e responsivo -->
  <header class="topbar">
    <nav class="navbar">
      <div class="brand">
        <img src="/ico.png" alt="Logo GreenDrop" class="logo">
        <a href="/" class="brand-name text-xl md:text-2xl font-bold brand-dark-green">GreenDrop</a>
      </div>

      <div class="controls">
        <div class="view-toggle" role="tablist" aria-label="Alternar visualização do mapa">
          <button class="btn btn-toggle active" data-view="leaflet" aria-selected="true">2D</button>
          <button class="btn btn-toggle" data-view="maplibre" aria-selected="false">3D</button>
        </div>
        <!-- Links adicionais no header -->
        <a href="/educativo" class="btn-outline hidden sm:inline-flex items-center gap-1">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
          </svg>
          <span class="hidden md:inline">Guia</span>
        </a>
        <a href="/" class="btn-outline">Voltar</a>
      </div>
    </nav>
  </header>

  <main>
    <!-- Painel lateral de filtros -->
    <aside class="filters">
      <div class="filters-header">
        <strong>Filtrar por material</strong>
        <button id="clearFilters" class="btn btn-mini">Limpar</button>
      </div>

      <input id="map-search" class="mt-2 mb-4 border border-gray-300 rounded-md" type="text" placeholder="Buscar por endereço..." />

      <div id="chips" class="chips"></div>

      <label class="open-now">
        <input id="map-open-now" type="checkbox" />
        Aberto agora
      </label>

      <div class="legend">
        <div><span class="lg lg-plastico"></span>Plástico</div>
        <div><span class="lg lg-vidro"></span>Vidro</div>
        <div><span class="lg lg-metal"></span>Metal</div>
        <div><span class="lg lg-papel"></span>Papel</div>
        <div><span class="lg lg-eletronicos"></span>Eletrônicos</div>
        <div><span class="lg lg-organico"></span>Orgânico</div>
      </div>

      <!-- Lista de pontos de coleta -->
      <div id="locations-list" class="locations-list mt-4"></div>
    </aside>

    <!-- Contêineres dos mapas -->
    <section id="maps">
      <div id="map-leaflet" class="map is-visible" aria-label="Mapa 2D"></div>
      <div id="map-maplibre" class="map" aria-label="Mapa 3D"></div>
    </section>
  </main>

  <!-- Modal de Avaliações -->
  <div id="reviews-modal" class="reviews-modal hidden">
    <div class="reviews-modal-overlay" onclick="closeReviewsModal()"></div>
    <div class="reviews-modal-content">
      <div class="reviews-modal-header">
        <h2 id="modal-point-name" class="text-xl font-bold">Avaliações</h2>
        <button onclick="closeReviewsModal()" class="close-btn">&times;</button>
      </div>
      <div class="reviews-modal-body">
        <div id="modal-rating-section" class="mb-4">
          <div class="flex items-center gap-2 mb-2">
            <span class="text-sm text-gray-600">Avaliar:</span>
            <div id="modal-rating-stars" class="rating-stars interactive">
              <span class="star" data-rating="1">★</span>
              <span class="star" data-rating="2">★</span>
              <span class="star" data-rating="3">★</span>
              <span class="star" data-rating="4">★</span>
              <span class="star" data-rating="5">★</span>
            </div>
          </div>
          <textarea id="modal-review-comment" class="w-full p-2 border border-gray-300 rounded-md text-sm" rows="3" placeholder="Deixe um comentário (opcional)"></textarea>
          <button id="modal-submit-review" class="mt-2 px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-700 text-sm font-semibold">Enviar Avaliação</button>
        </div>
        <div id="modal-reviews-list" class="reviews-list"></div>
      </div>
    </div>
  </div>
  <!-- Dados injetados -->
  <script>
    window.MAPTILER_KEY = '{{MAPTILER_KEY}}';
    window.__POINTS__ = {{#if points}}{{{json points}}}{{else}}[]{{/if}};
  </script>
  <script src="/js/map.js" defer></script>
</body>
</html>
