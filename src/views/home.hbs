                <i data-feather="menu" class="h-6 w-6 text-gray-600"></i>
            </button>
        </nav>
        <!-- Mobile Menu -->
        <div class="hidden md:hidden" id="mobile-menu">
            <ul class="px-2 pt-2 pb-3 space-y-1 sm:px-3">
                <li><a href="#"
                        class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-white hover:bg-brand-green">Início</a>
                </li>
                <li><a href="#sobre-nos"
                        class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-white hover:bg-brand-green">Sobre Nós</a>
                </li>
                <li><a href="#servicos"
                        class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-white hover:bg-brand-green">Serviços</a>
